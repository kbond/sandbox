<table id="zenstruck-media-table" class="table table-striped table-condensed table-hover table-bordered">
    <thead>
        <tr>
            <th>Filename</th>
            <th>Modified</th>
            <th>Size</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for file in manager.files %}
        <tr>
            <td>
                {% if file.isDir %}
                    <a href="{{ path('zenstruck_media_list', { 'path': manager.path ~ '/' ~ file.getFilename }) }}">
                        <i class="icon-folder-open"></i> {{ file.getFilename }}
                    </a>
                {% else %}
                    <i class="icon-file"></i> {{ file.getFilename }}
                {% endif %}
            </td>
            <td><em class="muted">{{ file.getMTime|date }}</em></td>
            <td>
                {% if file.isFile %}
                    <em class="muted">{{ file.getHumanFileSize }}</em>
                {% else %}
                    &nbsp;
                {% endif %}
            </td>
            <td>
                {% if file.isFile %}
                    <a class="btn btn-mini btn-danger method-delete" href="{{ path('zenstruck_media_delete_file', { 'filename': file.getFilename, 'path': manager.path }) }}"><i class="icon-trash icon-white"></i> Delete</a>
                {% else %}
                    &nbsp;
                {% endif %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>