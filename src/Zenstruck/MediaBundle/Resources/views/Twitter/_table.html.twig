<table id="zenstruck-media-table" class="table table-striped table-condensed table-hover table-bordered">
    <thead>
        <tr>
            <th>Filename</th>
            <th>Path</th>
            <th>Modified</th>
            <th>Size</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% if manager.path %}
        <tr>
            <td colspan="100"><i class="icon-arrow-up"></i> <a href="{{ path('zenstruck_media_list', manager.requestParams(manager.previousPath)) }}">...</a></td>
        </tr>
    {% endif %}
    {% for file in manager.files %}
        <tr>
            <td>
                {% if file.isDir %}
                    <i class="icon-folder-open"></i>
                    <a href="{{ path('zenstruck_media_list', manager.requestParams(manager.path ~ '/' ~ file.getFilename)) }}">
                        {{ file.getFilename }}
                    </a>
                {% else %}
                    <i class="icon-custom-{{ file.getExtension }}"></i> {{ file.getFilename }}
                {% endif %}
            </td>
            <td>
                {% if file.isFile %}
                    <a href="{{ file.getWebPath }}" target="_blank"><small>{{ file.getWebPath }}</small></a>
                {% else %}
                    &nbsp;
                {% endif %}
            </td>
            <td>
                <em class="muted">{{ file.getMTime|date }}</em>
                {% if file.isNew %}
                    <span class="label label-success">new</span>
                {% endif %}
            </td>
            <td>
                {% if file.isFile %}
                    <em class="muted">{{ file.getHumanFileSize }}</em>
                {% else %}
                    &nbsp;
                {% endif %}
            </td>
            <td class="zenstruck-media-actions">
                <a title="Delete" class="btn btn-mini btn-danger method-delete" href="{{ path('zenstruck_media_delete', manager.requestParams(null, file.getFilename)) }}"><i class="icon-trash icon-white"></i></a>
                <a title="Rename" href="#" class="btn btn-mini zenstruck-media-rename" data-name="{{ file.getBasename('.'~file.getExtension) }}" data-url="{{ path('zenstruck_media_rename', manager.requestParams(null, file.getFilename)) }}"><i class="icon-edit"></i></a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="100"><em>No files</em></td>
        </tr>
    {% endfor %}
    </tbody>
</table>