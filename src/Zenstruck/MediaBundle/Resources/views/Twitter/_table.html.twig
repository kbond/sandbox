<table id="zenstruck-media-table" class="table table-striped table-condensed table-hover table-bordered">
    <thead>
        <tr>
            <th>Filename</th>
            <th>Modified</th>
            <th>Size</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for dir in dirs %}
        <tr>
            <td>
                <a href="{{ path('zenstruck_media_list', { 'path': path ~ '/' ~ dir.filename }) }}">
                    <i class="icon-folder-open"></i> {{ dir.filename }}
                </a>
            </td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
        </tr>
    {% endfor %}
    {% for file in files %}
        <tr>
            <td><i class="icon-file"></i> {{ file.filename }}</td>
            <td><em class="muted">{{ file.mTime|date }}</em></td>
            <td><em class="muted">{{ file.size }}</em></td>
            <td>
                <a class="btn btn-mini btn-danger method-delete" href="{{ path('zenstruck_media_delete_file', { 'filename': file.filename, 'path': path }) }}"><i class="icon-trash icon-white"></i> Delete</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>