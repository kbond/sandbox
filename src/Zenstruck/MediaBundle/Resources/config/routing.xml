<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="zenstruck_media_list" pattern="/">
        <default key="_controller">zenstruck_media.controller:listAction</default>
    </route>

    <route id="zenstruck_media_upload" pattern="/upload">
        <default key="_controller">zenstruck_media.controller:uploadAction</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="zenstruck_media_delete" pattern="/delete/{filename}">
        <default key="_controller">zenstruck_media.controller:deleteAction</default>
        <requirement key="_method">DELETE</requirement>
    </route>

    <route id="zenstruck_media_rename" pattern="/rename/{filename}">
        <default key="_controller">zenstruck_media.controller:renameAction</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="zenstruck_media_mkdir" pattern="/mkdir">
        <default key="_controller">zenstruck_media.controller:createDirectoryAction</default>
        <requirement key="_method">POST</requirement>
    </route>
</routes>