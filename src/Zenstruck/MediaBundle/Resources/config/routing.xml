<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="zenstruck_media_list" pattern="/">
        <default key="_controller">zenstruck_media.controller:listAction</default>
    </route>

    <route id="zenstruck_media_upload" pattern="/upload">
        <default key="_controller">zenstruck_media.controller:uploadAction</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="zenstruck_media_delete_file" pattern="/delete_file/{filename}">
        <default key="_controller">zenstruck_media.controller:deleteFileAction</default>
        <requirement key="_method">DELETE</requirement>
    </route>

    <route id="zenstruck_media_delete_dir" pattern="/delete_dir/{filename}">
        <default key="_controller">zenstruck_media.controller:deleteDirAction</default>
        <requirement key="_method">DELETE</requirement>
    </route>

    <route id="zenstruck_media_rename_file" pattern="/rename_file/{filename}">
        <default key="_controller">zenstruck_media.controller:renameFileAction</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="zenstruck_media_rename_dir" pattern="/rename_dir/{filename}">
        <default key="_controller">zenstruck_media.controller:renameDirAction</default>
        <requirement key="_method">POST</requirement>
    </route>

    <route id="zenstruck_media_mkdir" pattern="/mkdir">
        <default key="_controller">zenstruck_media.controller:createDirectoryAction</default>
        <requirement key="_method">POST</requirement>
    </route>
</routes>