<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="zenstruck_media.filesystem_manager.class">Zenstruck\MediaBundle\Media\FilesystemManager</parameter>
    </parameters>

    <services>
        <service id="zenstruck_media.filesystem_manager" class="%zenstruck_media.filesystem_manager.class%">
            <argument>%zenstruck_dashboard.root_dir%</argument>
            <argument type="service" id="router" />
            <argument type="service" id="session" />
        </service>
    </services>
</container>