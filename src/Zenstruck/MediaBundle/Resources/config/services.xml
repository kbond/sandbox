<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="zenstruck_media.filesystem_factory.class">Zenstruck\MediaBundle\Media\FilesystemFactory</parameter>
        <parameter key="zenstruck_media.filesystem_manager.class">Zenstruck\MediaBundle\Media\FilesystemManager</parameter>
        <parameter key="zenstruck_media.alert_provider.class">Zenstruck\MediaBundle\Media\Alert\SessionAlertProvider</parameter>
    </parameters>

    <services>
        <service id="zenstruck_media.filesystem_factory" class="%zenstruck_media.filesystem_factory.class%" />
        <service id="zenstruck_media.alert_provider" class="%zenstruck_media.alert_provider.class%" public="false">
            <argument type="service" id="session" />
        </service>
    </services>
</container>