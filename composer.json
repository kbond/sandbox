{
    "name": "symfony/framework-standard-edition",
    "description": "The \"Symfony Standard Edition\" distribution",
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:kbond/ZenstruckFormBundle.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:kbond/ZenstruckDashboardBundle.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:kbond/ZenstruckCacheBundle.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:kbond/ZenstruckSlugifyBundle.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:kbond/ZenstruckMediaBundle.git"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "symfony/symfony": "2.1.*",
        "doctrine/orm": ">=2.2.3,<2.4-dev",
        "doctrine/doctrine-bundle": "1.1.*",
        "twig/extensions": "1.0.*@dev",
        "symfony/assetic-bundle": "2.1.*",
        "symfony/swiftmailer-bundle": "2.1.*",
        "symfony/monolog-bundle": "2.1.*",
        "sensio/distribution-bundle": "2.1.*",
        "sensio/framework-extra-bundle": "2.1.*",
        "sensio/generator-bundle": "2.1.*",
        "jms/di-extra-bundle": "~1.3",
        "kriswallsmith/assetic": "1.1.*@dev",

        "sensiolabs/security-checker": "dev-master",
        "nelmio/alice": "1.*",
        "zendframework/zend-crypt": "~2.0,!=2.1.1",
        "incenteev/composer-parameter-handler": "~2.0",
        "jms/serializer-bundle": "~0.11",

        "zenstruck/dashboard-bundle": "dev-master",
        "zenstruck/form-bundle": "dev-master",
        "zenstruck/cache-bundle": "dev-master",
        "zenstruck/slugify-bundle": "dev-master",
        "zenstruck/media-bundle": "dev-angular"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "symfony-assets-install": "symlink",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        }
    }
}
